<style>
    .box.box-danger {
        border-top-color: #dd4b39;
    }

    .box {
        position: relative;
        border-radius: 3px;
        background: #ffffff;
        border-top: 3px solid #d2d6de;
        border-top-color: rgb(210, 214, 222);
        margin-bottom: 20px;
        width: 100%;
        box-shadow: 12px 12px 12px rgba(255, 255, 153,0.9);
    }

    .box-header {
        color: #444;
        display: block;
        padding: 5px;
        position: relative;
        border-bottom: 0.5px solid #d2d6de;
        margin-bottom: 30px;
    }

    .box-title {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
    }
</style>
<link href="~/css/login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

@using (Html.BeginForm("OwnerRegistrationAdd", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-8">
        <div class="box box-danger">
            <div class="box-header" style="margin-top:10px;margin-bottom:10px;">
                <h3 class="box-title">OwnerRegistrationAdd</h3>
            </div>
            <div class="box-body">
                <div class="row" style="margin-top:10px;">
