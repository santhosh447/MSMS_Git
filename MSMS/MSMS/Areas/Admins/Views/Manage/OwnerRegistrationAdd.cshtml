                        @Html.RadioButtonFor(m => m.Gender, "female", new { @class = "form", @id = "rdbtnFemale" })female
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5" style="font-weight:bold;">Phone</div>
                    <div class="col-sm-5">
                        @*<input type="tel" id="txtPhone" name="txtPhone" class="form-control" placeholder="Enter Phone" />*@
                        @Html.TextBoxFor(m => m.Phone, null, new { @class = "form-control", @placeholder = "Enter Phone" })

                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5 form-group">
                        <label>Pan Image</label>
                    </div>
                    <div class="col-sm-5 form-group">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new img-thumbnail" style="width: 200px; height: 150px;">
                                <img data-src="holder.js/100%x100%" alt="...">
                            </div>
                            <div class="fileinput-preview fileinput-exists img-thumbnail" style="max-width: 200px; max-height: 150px;"></div>

                            <div>
                                <span class="btn btn-outline-secondary btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="Image" id="Image"></span>
                                <a href="#" class="btn btn-outline-secondary fileinput-exists" data-dismiss="fileinput" stye="margin-top:10px;">Remove</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
               `</div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5 form-group">
                        <label>Aadhar Image</label>
                    </div>
                    <div class="col-sm-5 form-group">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new img-thumbnail" style="width: 200px; height: 150px;">
                                <img data-src="holder.js/100%x100%" alt="...">
                            </div>
                             <div class="fileinput-preview fileinput-exists img-thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                            <div>
                                 <span class="btn btn-outline-secondary btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="Image1" id="Image1"></span>
