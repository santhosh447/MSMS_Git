                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5" style="font-weight:bold;">Status</div>
                    <div class="col-sm-5">
                        @*<input type="file" class="uploadFile img" value="Upload Photo" id="Owner_Image" style="width: 0px;height: 0px;overflow: hidden;">*@
                        @Html.TextBoxFor(m => m.Status, new { @class = "form-control", @placeholder = "Enter Status" })
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="text-align:center;margin-top:10px;">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5">
                        @*<a type="s" id="Register" name="Register" value="Register" class="btn btn-primary" href="StoreAdd">Register</a>*@
