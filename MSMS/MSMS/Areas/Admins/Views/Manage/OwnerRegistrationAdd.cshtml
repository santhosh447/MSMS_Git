                    <div class="col-sm-5">
                        @*<input type="email" id="txtOwnerEmail" name="txtOwnerEmail" class="form-control" placeholder="Enter Employee Name" />*@
                        @Html.TextBoxFor(m => m.Owner_Email, null, new { @class = "form-control", @placeholder = "Enter Owner Name" })
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5" style="font-weight:bold;">Name</div>
                    <div class="col-sm-5">
                        @*<input type="text" id="txtName" name="txtName" class="form-control" placeholder="Enter Name" />*@
                        @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @placeholder = "Enter Owner Name" })

                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5" style="font-weight:bold;">Age</div>
                    <div class="col-sm-5">
                        @*<input type="text" id="txtAge" name="txtAge" class="form-control" placeholder="Enter Age" />*@
                        @Html.TextBoxFor(m => m.Age, null, new { @class = "form-control", @placeholder = "Enter Age" })

                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row" style="margin-top:10px;">
