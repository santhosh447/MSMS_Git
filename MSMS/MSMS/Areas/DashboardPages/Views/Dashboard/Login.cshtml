@model MSMS.Areas.Admins.Models.Owner
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/DashboardPages/Views/Shared/_DBLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="author">
                            <div class="typography-line">
                                <a href="#">
                                    <h4 class="title">India's 1st Integrated Digital HealthCare Platform</h4>
                                </a>
                            </div>

                            <div class="typography-line">
                                <span style="left:36px"><i class="nc-icon nc-single-02" style="font-size: 40px;color:#0094ff;"></i></span>
                                Easy Access
                                <br>
                                <small>Access your Pharmacy from anywhere and anytime</small>
                            </div>
                            <div class="typography-line">
                                <span style="left:36px"><i class="nc-icon nc-mobile" style="font-size: 40px;color:#0094ff;"></i></span>
                                Digitized Communication
                                <br>
                                <small>Receive Prescription viaCustomer Mobile Application and Doctor Application</small>
                            </div>
                            <div class="typography-line">
                                <span style="left:36px"><i class="nc-icon nc-istanbul" style="font-size: 40px;color:#0094ff;"></i></span>
                                Grow together
                                <br>
                                <small>Connect With Doctor and Customers</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-user" style="margin-top:30px;">
                        <div class="card-header">
                            <a class="typography-line">
                                <h4 class="card-title" style="text-align: center;color: darkturquoise;">Sign in to Continue</h4>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Owner_Email, new { @class = "form-control", @id = "txtEmail", @placeholder = "Enter Email ID" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "txtPassWord", @placeholder = "Enter PassWord" })
                            </div>
                            @*<div class="form-group">*@
                            <input type="submit" name="Login" id="Login" value="Login" class="btn btn-success">
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


